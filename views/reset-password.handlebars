
    <script src="js/janrain-init.js"></script>
    <script type="text/javascript">
        // --- page-specific settings ------------------------------------------
        janrain.settings.capture.flowName = 'lilly_pro_uk';
        janrain.settings.capture.screenToRender = 'resetPasswordRequestCode';

        // --- define event handlers and start the janrain ui ------------------
        function janrainCaptureWidgetOnLoad() {
            janrain.capture.ui.registerFunction('passwordValidation', janrainCustomPasswordValidation);

            // should be the last line in janrainCaptureWidgetOnLoad()
            janrain.capture.ui.start();
        }
    </script>

    <!-- navigation links -->
    <a href="/" id="captureSignInLink">Sign In / Sign Up</a>

    <!-- Capture widget screens -->
    <div style="display:none;" id="resetPassword">
        <div class="capture_header">
            <h1>{* page_resetPassword_header *}</h1>
        </div>
        {* newPasswordForm *}
            {* newpassword *}
            {* newpasswordConfirm *}
            <div class="capture_footer">
                {* submitButton *}
            </div>
        {* /newPasswordForm *}
    </div>
    <div style="display:none;" id="resetPasswordSuccess">
        <div class="capture_header">
            <h1>{* page_resetPassword_success_header *}</h1>
        </div>
        <p>{* page_resetPassword_success_message *}</p>
        <div class="capture_footer">
            <a href="/" class="capture_btn capture_primary">{* page_resetPassword_signin *}</a>
        </div>
    </div>
    <div style="display:none;" id="resetPasswordRequestCode">
        <div class="capture_header">
            <h1>{* page_resetPassword_requestCode_header *}</h1>
        </div>
        <p>{* page_resetPassword_requestCode_message *}</p>
        {* #resetPasswordForm *}
            {* traditionalSignIn_emailAddress *}
            <div class="capture_footer">
                {* forgotPassword_sendButton *}
            </div>
        {* /resetPasswordForm *}
    </div>
    <div style="display:none;" id="resetPasswordRequestCodeSuccess">
        <div class="capture_header">
            <h1>{* page_resetPassword_requestCode_success_header *}</h1>
        </div>
            <p>{* page_resetPassword_requestCode_success_message *}</p>
        <div class="capture_footer">
            <a href="#" onclick="janrain.capture.ui.modal.close()" class="capture_btn capture_primary">{* page_button_close *}</a>
        </div>
    </div>
    <div style="display:none;" id="userStatusPostLogin">
        {* page_access_not_active *}
    </div>
    <div style="display:none;" id="countryPostLogin">
        {* page_access_wrong_country *}
    </div>
    <div style="display:none;" id="professionalGroupPostLogin">
        {* page_access_wrong_group *}
